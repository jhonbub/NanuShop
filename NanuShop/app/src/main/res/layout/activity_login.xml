<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginActivity"
    android:background="@drawable/fondo2">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:background="@drawable/logo"
            android:layout_width="150dp"
            android:layout_height="200dp"
            />
        <TextView

            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="50sp"
            android:layout_marginRight="20sp"
            android:text="NannuSHOP"
            android:textColor="@color/azul"

            android:textSize="38sp" />






    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="513dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20sp"

            android:layout_marginTop="10sp"
            android:layout_marginRight="20sp"
            android:text="Inicia secion "
            android:textAlignment="center"
            android:textColor="@color/azul"

            android:textSize="30sp" />


        <EditText
            android:id="@+id/Correo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:hint="ingrese correo"
            android:textColorHint="@color/azul"
            android:background="@color/lila"
            android:textSize="40dp">


        </EditText>



        <EditText
            android:id="@+id/Clave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            android:hint="Cleve"
            android:textColorHint="@color/azul"
            android:background="@color/lila"
            android:textSize="40sp">


        </EditText>
        <Button

            android:id="@+id/validar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/amarillo"
            android:text="Validar"
            android:textColor="@color/azul"

            android:textSize="30sp"></Button>
        <Button

            android:id="@+id/Resgistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/amarillo"
            android:text="Registrar"
            android:textColor="@color/azul"

            android:textSize="30sp"></Button>


    </LinearLayout>

    <TextView
        android:background="@color/verde"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="30dp"
        android:text="By JhonBB"
        android:textAlignment="center"
        android:textColor="@color/lila"
        android:textSize="25sp"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="bottom|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>